<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <TableRow>

    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_gravity="left"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <Button android:id="@+id/run_startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="START"
            />
        <Button android:id="@+id/run_stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STOP"
            />
        <Button android:id="@+id/run_mapButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MAP"
            />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:background="#2e0024ff">

        <ImageView
            android:id="@+id/item_image"
            android:layout_margin="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_image"
            android:height="50dp"
            android:padding="15dp"
            android:text="NAME"
            />

        <TextView
            android:id="@+id/item_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_name"
            android:height="50dp"
            android:padding="15dp"
            android:text="LEVEL"
            android:gravity="right"

            />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_toRightOf="@id/item_image"
            android:height="50dp"
            android:padding="15dp"
            android:text="PRICE"
            />

        <TextView
            android:id="@+id/item_bonus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_level"
            android:layout_toRightOf="@id/item_price"
            android:height="50dp"
            android:padding="15dp"
            android:text="BONUS"
            android:gravity="right"
            />

            />
    </RelativeLayout>
</TableLayout>
