<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#2e0024ff"
                android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/item_left">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="30dp"
            android:paddingTop="5dp"
            android:text="NAME"
            android:layout_below="@+id/item_image"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/item_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_left"
        android:height="30dp"
        android:padding="5dp"
        android:text="LEVEL"

        />

    <TextView
        android:id="@+id/item_remaining"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_level"
        android:gravity="right"
        android:height="30dp"
        android:padding="5dp"
        android:text="REMAINING"

        android:textStyle="italic"
        android:textSize="10dp"
        android:textColor="#ff7f7f7f"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_level"
        android:layout_toRightOf="@id/item_left"
        android:height="30dp"
        android:padding="5dp"
        android:text="PRICE"
        />

    <TextView
        android:id="@+id/item_bonus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_price"
        android:layout_toRightOf="@id/item_left"
        android:height="30dp"
        android:padding="5dp"
        android:text="BONUS"
        />

    />
</RelativeLayout>